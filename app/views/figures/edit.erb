<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
    <label><h3>Figure Name:</h3></label>
      <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

    <label><h3>Edit Titles:</h3></label>
      <% Title.all.each do |title| %>
       <label><%= title.name %></label>
        <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>

      <% end %>

    <label>Create a New Title</label>
      <input type="text" name="title[name]" id="new_title">
      <br>

      <label>Edit Landmarks:</label>
      <br>
      <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
          <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>"<%='checked' if @figure.landmarks.include?(landmark) %>>
      <% end %>
      <label>Add a New Landmark:</label>
          <input type="text" name="landmark[name]" id="new_landmark">

          <br>

        <label>Landmark Year Constructed:</label>
          <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
          <br></br>

      <input type="submit" name="submit" id="submit" value="Edit Figure">

  </form>
